{
  "name": "npm-env",
  "version": "2.0.3",
  "description": "Run commands that set environment variables across platforms",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "scripts": {
    "start": "npm run test:watch",
    "prebuild": "rimraf dist && mkdir dist",
    "build": "babel src --out-dir dist",
    "commit": "git-cz",
    "lint": "xo src",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "mocha src/*.test.js -w --compilers js:babel/register",
    "test": "istanbul cover -x *.test.js node_modules/mocha/bin/_mocha -- -R spec src/index.test.js --compilers js:babel/register"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sheerun/npm-env.git"
  },
  "keywords": [
    "variables",
    "cross-platform",
    "npm",
    "path",
    "env",
    "windows"
  ],
  "author": "Adam Stankiewicz <sheerun@sher.pl>",
  "contributors": [
    "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sheerun/npm-env/issues"
  },
  "homepage": "https://github.com/sheerun/npm-env",
  "devDependencies": {
    "babel": "5.8.23",
    "chai": "3.3.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.4.4",
    "cz-conventional-changelog": "1.1.4",
    "ghooks": "1.0.0",
    "istanbul": "0.3.21",
    "mocha": "2.3.3",
    "proxyquire": "1.7.2",
    "rimraf": "^2.5.2",
    "sinon": "1.17.1",
    "sinon-chai": "2.8.0",
    "validate-commit-msg": "1.0.0",
    "xo": "^0.16.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog/"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg && npm run lint && npm t && npm run check-coverage && echo 'pre-commit checks good üëç'"
    }
  },
  "dependencies": {
    "cross-spawn": "^3.0.1",
    "execa": "^0.4.0",
    "lodash.assign": "^3.2.0",
    "npm-run-path": "^1.0.0",
    "path-key": "^1.0.0"
  },
  "xo": {
    "space": true,
    "semicolon": true,
    "esnext": true,
    "rules": {
      "xo/no-process-exit": [
        "off"
      ],
      "babel/object-curly-spacing": [
        "error",
        "always"
      ],
      "no-unused-expressions": [
        "off"
      ]
    },
    "envs": [
      "node",
      "mocha"
    ]
  },
  "files": ["dist/index.js", "dist/cli.js"]
}
